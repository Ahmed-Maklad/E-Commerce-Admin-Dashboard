@model GetAllOrderMastersDTO
@{
    ViewData["Title"] = "GetAllOrderMasters";
    SelectList OrderState = new(ViewBag.OrderSate, "Id", "StateEn", Model.OrderStateId);
}

<div class="col-lg-12 grid-margin stretch-card" >
    <div class="card">
        <div class="card-body">
            <div class="table-responsive ">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th> Order Number </th>
                            <th> Client Name </th>
                            <th> Progress </th>
                            <th>Order state</th>
                            <th>Coupon</th>

                            <th> Amount </th>
                            <th> Action </th>
                        </tr>
                    </thead>
                    <tbody>


                        <tr>
                            
                            <td>@Model.OrderNo </td>
                            <td>@Model.ClientName </td>
                            <td>
                                @if (Model.OrderStateId == 1)
                                {
                                    <div class="progress">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                }
                                else if (Model.OrderStateId == 2)
                                {
                                    <div class="progress">
                                        <div class="progress-bar bg-secondary" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                }
                                else if (Model.OrderStateId == 3)
                                {
                                    <div class="progress">
                                        <div class="progress-bar bg-info" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                }
                                else
                                {
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                }

                            </td>

                            <td>
                                @if (Model.OrderStateId == 1)
                                {
                                    <label class="badge badge-primary">@Model.OrderStateName</label>
                                }
                                else if (Model.OrderStateId == 2)
                                {
                          
                                    <label class="badge badge-secondary">@Model.OrderStateName</label>

                                }
                                else if (Model.OrderStateId == 3)
                                {
                                    <label class="badge badge-info">@Model.OrderStateName</label>

                                }
                                else
                                {
                              
                                    <label class="badge badge-success">@Model.OrderStateName</label>

                                }
                             </td>
                            <td> @Model.DiscountPerctnage +"%" </td>
                            <td> @Model.Total</td>
                            <td>
             @*                     <button class="btn btn-inverse-success for inverse buttons p-2  m-1" onclick="changingState(3,@Model.Id)">Aprove</button>
                                 <button class="btn btn-inverse-danger  for inverse buttons p-2  m-1" onclick="changingState(4,@Model.Id)">Rejecte</button> *@

                                <div class="mb-3" >
                                   
                                    <select class="form-select bg-warning text-dark"  aria-label="Action select" style="width: auto; "  asp-for="OrderStateId" asp-items="OrderState" onchange="changingState(this.value, @Model.Id)">
                                    </select>
                                </div>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


