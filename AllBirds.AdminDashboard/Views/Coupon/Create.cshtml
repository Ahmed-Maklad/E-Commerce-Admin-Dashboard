@model AllBirds.DTOs.CouponDTOs.CUCouponDTO

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Create Coupon</h4>
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label for="Code">Coupon Code</label>
                <input type="text" class="form-control" id="Code" name="Code" maxlength="8" value="@Model.Code" required />
            </div>

            <div class="form-group">
                <label for="Discount">Discount (%)</label>
                <input type="number" class="form-control" id="Discount" name="Discount" value="@Model.Discount" min="0" max="100" required />
            </div>

            <div class="form-group">
                <label for="IsActive">Status</label>
                <select class="form-control" id="IsActive" name="IsActive" required>
                    <option value="true" selected>Active</option>
                    <option value="false">Inactive</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary mr-2">Create</button>
            <a href="@Url.Action("Index")" class="btn btn-dark">Cancel</a>
        </form>
    </div>
</div>
