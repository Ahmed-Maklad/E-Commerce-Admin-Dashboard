@model List<GetAllOrderDetailsDTO>;

<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Product Image</th>
                            <th>Product</th>
                            <th>Color</th>
                            <th>Size</th>
                            <th>Quantity</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            
                            <tr>
                            <td>
                                <img class="img-xs rounded" src="@item.ProductColorSizeImage.MainImage" alt="image">
                            </td>
                                <td> @item.ProductColorSizeImage.ProductNameEN</td>
                                <td>@item.ProductColorSizeImage.ColorNameEN</td>
                                <td>@item.ProductColorSizeImage.Size</td>
                                <td>@item.Quantity</td>
                                <td>@item.DetailPrice</td>
                            </tr>
                    
                        }
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</div>