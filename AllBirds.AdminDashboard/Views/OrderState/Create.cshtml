@using AllBirds.DTOs.OrderStateDTOs
@model CUOrderStateDTO

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Create Order State</h4>
        <form method="post">
            <div class="form-group">
                <label for="StateAr">State (Arabic)</label>
                <input type="text" class="form-control" id="StateAr" name="StateAr" required>
            </div>
            <div class="form-group">
                <label for="StateEn">State (English)</label>
                <input type="text" class="form-control" id="StateEn" name="StateEn" required>
            </div>
            <button type="submit" class="btn btn-primary mr-2">Create</button>
            <a href="@Url.Action("Index")" class="btn btn-dark">Cancel</a>
        </form>
    </div>
</div>
